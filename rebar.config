%% -*- mode: Erlang; -*-

{require_otp_vsn, "R15|R16"}.

{sub_dirs, [ "rel"]}.
% 
% 
 {erl_opts, [
    {parse_transform, lager_transform},
%      no_debug_info,
     {i, "include"},
      warn_unused_vars
 ]}.
     %warnings_as_errors,

{deps, [
     {lager, "2.0.0",    {git, "https://github.com/basho/lager.git",       {tag, "2.0.0"}}},
     {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", {branch, "master"}}},
     {ranch , "0.8.4"    ,{git,"https://github.com/extend/ranch.git","0.8.4"} },
     {goldrush,".*", {git,"https://github.com/DeadZen/goldrush.git",
                    {tag,"879c69874a"}}},

     
    
     {cowboy, "0.8.6", {git, "https://github.com/extend/cowboy.git",  "0.8.6"}},
     {erlsha2, ".*", {git, "https://github.com/vinoski/erlsha2.git", {branch, "master"} } },
     {erlydtl, ".*",  {git, "https://github.com/evanmiller/erlydtl.git",{branch,"master"} } },
     
     {prolog_open_api, ".*", {git, "git@git.ceb.loc:adaptive-brains/prolog-open-api.git", {branch, "master"}}},
     {eprolog, ".*", {git, "git@git.ceb.loc:adaptive-brains/hprolog.git", {branch, "process_zoo_avoid"}}},
     {thrift, ".*",  {git, "git@git.ceb.loc:adaptive-brains/gen_erlthrfit_0-9-4.git",{branch,"master" } }}

     

]}.

{cover_enabled, true}.

{clean_files, ["deps/*/ebin", "*.eunit", "ebin"]}.
{app_bin, ["ebin"]}.
{eunit_opts, [
                verbose,
                {report, {eunit_surefire, [{dir, "."}]}}
            ]
}.
